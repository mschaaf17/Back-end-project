<article class="post">
  <div class="title">
    <a class = "noHover" href ="/post/{{id}}">{{title}}</a>
    <p>{{post_text}}</p>
  </div>
  <div class="meta">
    {{likes_count}} {{format_plural "like" likes_count}} by {{user.username}} on {{format_date created_at}}
   

    |
    <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
  </div>
</article>