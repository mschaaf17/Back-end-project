<div class="columns tall">
    <form class="new-question-form columns cards pr-5">
      <div class="posts">
        <div>
        <h2>Have something to share?</h2>
      </div>
        <div>
            <label for="question-title">Question:</label>
            <input class="input" type="text" id="question-title" name="question-title" />
        </div>
        
        <div>
            <label for="question-url">Content:</label>
            <textarea class="textarea" id="question-url" name="question-url"></textarea>
        </div>
        <button type="submit" class="btn">Create</button>
      </div>
    </form>
{{#if posts.length}}
<section class="column cards">
  <div class="posts">
    <h2>Your Posts</h2>
  <ol>
    {{#each posts as |post|}}
    <li class="comments-posts">
      {{> post-info post}}
      <br>
      <a  href="/dashboard/edit/{{post.id}}" class="edit-link button">Edit post</a>
    </li>
    {{/each}}
  </ol>
  </div>
</section>
{{/if}}


{{#if liked_posts.length}}
<section class="column cards">
  <div class="posts">
        <h2>Your Liked Posts</h2>
<ol class="post-list">
    {{#each liked_posts as |likes|}}
    <li class="comments-posts">
    {{> post-info likes}}
    </li>
    {{/each}}
</ol>
</section>
{{/if}}
  </div>
</div>


<script src="/javascript/add-question.js"></script>